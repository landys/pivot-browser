<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
    borderStyle="none" 
    cornerRadius="5"
    width="25" height="25"
    rollOver="setStyle('borderStyle', 'solid')"
    rollOut="setStyle('borderStyle', 'none')">
    
    <mx:Script>
        <![CDATA[
           [Bindable]
           public var source:Class; 
           
           [Bindable]
           public var imgWidth:int;
           
           [Bindable]
           public var imgHeight:int;
           
        ]]>
    </mx:Script>
    
    <mx:Image id="img" source="{source}" 
        width="{imgWidth}" height="{imgHeight}"
        maintainAspectRatio="true"
        verticalCenter="0"
        horizontalCenter="0"
        />

</mx:Canvas>
